<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.chenglong.muscle.custom.MyToolBar
        xmlns:mytoolbar="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:fitsSystemWindows="true"
        android:background="?attr/colorPrimary"
        mytoolbar:rightTextTitle="肌肉锻炼" />
    <!--<include layout="@layout/toolbar_title" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/icon_bgd">

        <TextView
            android:id="@+id/muscle_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold" />
    </ScrollView>
   
    <ListView
        android:id="@+id/musclelist_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>